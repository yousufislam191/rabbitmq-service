# Environment variables for Docker Compose
# Copy this file to .env and modify as needed

# Database Configuration
MONGODB_URI=mongodb://admin:admin123@mongodb:27017/rabbitmq_batch_db?authSource=admin
MONGODB_DB_NAME=rabbitmq_batch_db

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:admin123@rabbitmq:5672
RABBITMQ_USER=admin
RABBITMQ_PASS=admin123

# Application Configuration
NODE_ENV=development
PORT=3000

# For production, change these default credentials
# RABBITMQ_DEFAULT_USER=your_rabbitmq_user
# RABBITMQ_DEFAULT_PASS=your_strong_password
# MONGO_INITDB_ROOT_USERNAME=your_mongo_user
# MONGO_INITDB_ROOT_PASSWORD=your_strong_password
